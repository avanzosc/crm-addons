<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crm_lead_kanban_inherit" model="ir.ui.view">
        <field name="name">crm.lead.kanban.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_lead_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//strong[@class='o_kanban_record_title']" position="before">
                <field name="sequence"/>
            </xpath>
        </field>
    </record>

    <record id="view_crm_lead_tree_inherit" model="ir.ui.view">
        <field name="name">crm.lead.tree.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="field[@name='date_deadline']" position="before">
                <field name="sequence" />
            </xpath>
        </field>
    </record>

    <record id="crm_case_kanban_view_leads_inherit" model="ir.ui.view">
        <field name="name">crm.lead.kanban.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//strong[@class='o_kanban_record_title']" position="before">
                <field name="sequence" />
            </xpath>
        </field>
    </record>

    <record id="crm_case_form_view_oppor_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="sequence" /><br />
            </xpath>
        </field>
    </record>

    
</odoo>
