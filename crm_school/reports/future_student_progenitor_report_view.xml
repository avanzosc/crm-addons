<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="future_student_progenitor_report_view_tree" model="ir.ui.view">
        <field name="model">future.student.progenitor.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="academic_year_id" />
                <field name="center_id" />
                <field name="course_id" />
                <field name="student_id" />
                <field name="progenitor_id" />
                <field name="progenitor_email" string="Email" />
                <field name="progenitor_phone" string="Phone" />
                <field name="progenitor_mobile" string="Mobile" />
            </tree>
        </field>
    </record>

    <record id="future_student_progenitor_report_view_search" model="ir.ui.view">
        <field name="model">future.student.progenitor.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="student_id" />
                <field name="progenitor_id" />
                <separator />
                <field name="academic_year_id" />
                <field name="center_id" />
                <field name="course_id" />
                <separator />
                <filter string="Without Contact Data"
                        name="without_contact_data"
                        domain="[('progenitor_email','=',False),('progenitor_phone','=',False),('progenitor_mobile','=',False)]" />
                <filter string="Unknown Email"
                        name="without_academic_year"
                        domain="[('progenitor_email','=',False)]" />
                <filter string="Unknown Phone"
                        name="without_academic_year"
                        domain="[('progenitor_phone','=',False),('progenitor_mobile','=',False)]" />
                <separator />
                <filter string="Unknown Academic Year"
                        name="without_academic_year"
                        domain="[('academic_year_id','=',False)]" />
                <filter string="Unknown Education Center"
                        name="without_center"
                        domain="[('center_id','=',False)]" />
                <filter string="Unknown Education Course"
                        name="without_course"
                        domain="[('course_id','=',False)]" />
                <separator />
                <filter string="Current Academic Year" name="current_academic_year"
                        domain="[('academic_year_id.current','=',True)]" />
                <group expand="1" string="Group By">
                    <filter string="Student" name="group_student"
                            context="{'group_by':'student_id'}"/>
                    <filter string="Progenitor" name="group_progenitor"
                            context="{'group_by':'progenitor_id'}"/>
                    <separator />
                    <filter string="Academic Year" name="group_academic_year"
                            context="{'group_by':'academic_year_id'}"/>
                    <filter string="Education Center" name="group_education_center"
                            context="{'group_by':'center_id'}"/>
                    <filter string="Education Course" name="group_education_course"
                            context="{'group_by':'course_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_future_student_progenitor_report" model="ir.actions.act_window">
        <field name="name">Future Student Progenitor List</field>
        <field name="res_model">future.student.progenitor.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id"
               ref="future_student_progenitor_report_view_search"/>
    </record>

    <menuitem id="future_student_progenitor_report_menuitem"
              parent="crm.crm_menu_root"
              action="action_future_student_progenitor_report"
              sequence="5" />
</odoo>
