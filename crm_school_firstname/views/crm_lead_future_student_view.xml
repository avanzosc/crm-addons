<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="crm_lead_future_student_view_form" model="ir.ui.view">
        <field name="model">crm.lead.future.student</field>
        <field name="inherit_id" ref="crm_school.crm_lead_future_student_form_view" />
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <label for="name"/>
                <div class="o_row">
                    <field name="name" placeholder="Firstname" />
                    <field name="lastname" placeholder="Lastname" />
                </div>
            </field>
        </field>
    </record>
</odoo>
