    <template id="portal_my_home_sale" name="Show Claims" customize_show="True" inherit_id="portal.portal_my_home" priority="50">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Claims</t>
                <t t-set="url" t-value="'/my/claims'"/>
                <t t-set="placeholder_count" t-value="'claim_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_layout" name="Portal layout: claim menu entry" inherit_id="portal.portal_breadcrumbs" priority="50">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'claim' or claim" class="col-lg-2" t-attf-class="breadcrumb-item #{'active ' if not claim else ''}">
                <a t-if="claim" t-attf-href="/my/claims?{{ keep_query() }}">Claims</a>
                <t t-else="">Claims</t>
            </li>
            <li t-if="claim" class="breadcrumb-item active text-truncate col-8 col-lg-10">
                <t t-esc="claim.name"/>
            </li>
        </xpath>
    </template>

    <template id="portal_my_claims" name="My Claims">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Claims</t>
            </t>
            <t t-if="not claims">
                <div class="alert alert-warning mt8" role="alert">
                    There are no claims.
                </div>
            </t>
            <t t-if="claims" t-call="portal.portal_table">
                <tbody>
                    <tr t-foreach="claims" t-as="claim">
                        <td class="text-left">
                            #<span t-esc="claim.id"/>
                        </td>
                        <td>
                            <a t-attf-href="/my/claim/#{claim.id}?{{ keep_query() }}"><span t-field="claim.name"/></a>
                        </td>
                        <td class="text-center">
                            <span class="badge badge-pill badge-info" title="Current stage of the claim" t-esc="claim.stage_id.name" />
                        </td>
                    </tr>
                </tbody>
            </t>
        </t>
    </template>

    <template id="portal_my_claim" name="My Claim">
        <t t-call="portal.portal_layout">
            <t t-set="o_portal_fullwidth_alert" groups="project.group_project_user">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#model=project.task&amp;id=%s&amp;view_type=form' % (task.id)"/>
                </t>
            </t>

            <t t-call="portal.portal_record_layout">
                <t t-set="card_header">
                    <div class="row no-gutters">
                        <div class="col-12">
                            <h5 class="d-flex mb-1 mb-md-0 row">
                                <span t-field="claim.name" class="col-9 text-truncate"/>
                                <small class="text-muted d-none d-md-inline"> (#<span t-field="claim.id"/>)</small>
                                <div class="col-3 col-md-2 text-right">
                                    <small class="text-right">Status:</small>
                                    <span t-field="claim.stage_id.name" class=" badge badge-pill badge-info" title="Current stage of this task"/>
                                </div>
                            </h5>
                        </div>
                    </div>
                </t>
                <t t-set="card_body">
                    <div class="row mb-4">
                        <div class="col-12 col-md-6 mb-1">
                            <strong>Date:</strong> <span t-field="claim.create_date" t-options='{"widget": "date"}'/>
                        </div>
                        <div class="col-12 col-md-6" t-if="claim.date_deadline">
                            <strong>Deadline:</strong> <span t-field="claim.date_deadline" t-options='{"widget": "date"}'/>
                        </div>
                    </div>

                    <div class="row mb-4" t-if="claim.user_id or claim.partner_id">
                        <div class="col-12 col-md-6 pb-2" t-if="claim.user_id">
                            <strong>Assigned to</strong>
                            <div class="row">
                                <div class="col flex-grow-0 pr-3">
                                    <img t-if="claim.user_id.image_1024" class="rounded-circle mt-1 o_portal_contact_img" t-att-src="image_data_uri(claim.user_id.image_1024)" alt="Contact"/>
                                    <img t-else="" class="rounded-circle mt-1 o_portal_contact_img" src="/web/static/src/img/user_menu_avatar.png" alt="Contact"/>
                                </div>
                                <div class="col pl-md-0">
                                    <div t-field="claim.user_id" t-options='{"widget": "contact", "fields": ["name", "email", "phone"]}'/>
                                </div>
                            </div>
                        </div>
                        <div class="coll-12 col-md-6 pb-2" t-if="claim.partner_id">
                            <strong>Reported by</strong>
                            <div class="row">
                                <div class="col flex-grow-0 pr-3">
                                    <img t-if="claim.partner_id.image_1024" class="rounded-circle mt-1 o_portal_contact_img" t-att-src="image_data_uri(claim.partner_id.image_1024)" alt="Contact"/>
                                    <img t-else="" class="rounded-circle mt-1 o_portal_contact_img" src="/web/static/src/img/user_menu_avatar.png" alt="Contact"/>
                                </div>
                                <div class="col pl-md-0">
                                    <div t-field="claim.partner_id" t-options='{"widget": "contact", "fields": ["name", "email", "phone"]}'/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" t-if="claim.description">
                        <div t-if="claim.description" t-attf-class="col-12 col-lg-7 mb-4 mb-md-0 col-lg-12">
                            <hr class="mb-1"/>
                            <div class="d-flex my-2">
                                <strong>Description</strong>
                            </div>
                             <span t-field="claim.description" itemprop="description"/>
                        </div>
                    </div>
                </t>
            </t>

            <div class="mt32">
                <h4><strong>Message and communication history</strong></h4>
                <t t-call="portal.message_thread">
                    <t t-set="object" t-value="claim"/>
                    <t t-set="token" t-value="claim.access_token"/>
                    <t t-set="pid" t-value="pid"/>
                    <t t-set="hash" t-value="hash"/>
                </t>
            </div>
        </t>
    </template>

