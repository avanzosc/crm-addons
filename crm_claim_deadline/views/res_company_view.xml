<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_company_view_form" model="ir.ui.view">
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <group name="social_media" position="after">
                <group name="claim_deadline_grp" string="Claim Deadline">
                    <field name="claim_closing_days" />
                </group>
            </group>
        </field>
    </record>

    <record id="res_company_view_tree" model="ir.ui.view">
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_tree" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="claim_closing_days" optional="hide" />
            </field>
        </field>
    </record>
</odoo>
