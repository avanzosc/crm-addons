<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_history_tree" model="ir.ui.view">
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_history_tree" />
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="claim_id" optional="show"/>
                </field>
            </field>
        </record>

        <record id="purchase_order_line_tree" model="ir.ui.view">
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_tree" />
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="claim_id" optional="show"/>
                </field>
            </field>
        </record>

        <record id="purchase_order_line_form2" model="ir.ui.view">
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_form2" />
            <field name="arch" type="xml">
                <field name="price_unit" position="after">
                    <field name="claim_id"/>
                </field>
            </field>
        </record>

        <record id="purchase_order_line_search" model="ir.ui.view">
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_search" />
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="claim_id"/>
                </field>
                <filter name="status" position="before">
                    <filter string="Claim" name="claim" domain="[]"
                        context="{'group_by' : 'claim_id'}"/>
                </filter>
            </field>
        </record>
    </data>
</odoo>
