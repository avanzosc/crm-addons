<odoo>
    <data>
<!-- CRM Claim -->
        <record id="crm_case_claims_form_view" model="ir.ui.view">
            <field name="inherit_id" ref="crm_claim.crm_case_claims_form_view" />
            <field name="model">crm.claim</field>
            <field name="arch" type="xml">
                <xpath expr="//page[1]"
                    position="after">
                    <page string="Related Extra Information">
                        <separator colspan="4" string="Related Stock Pickings" />
                        <field name="picking_ids" colspan="4" nolabel="1" widget="many2many"/>
                        <separator colspan="4" string="Related Repairs" />
                        <field name="repair_ids" colspan="4" nolabel="1" widget="many2many"/>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
