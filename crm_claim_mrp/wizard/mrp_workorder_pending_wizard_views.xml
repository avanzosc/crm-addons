<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="mrp_workorder_pending_view_form" model="ir.ui.view">
        <field name="name">mrp.workorder.pending.wizard.form</field>
        <field name="model">mrp.workorder.pending.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="create_claim"/>
                        <field name="loss_id"/>
                    </group>
                    <footer>
                        <button name="button_create_claim" string="Accept"
                                    type="object" class="oe_highlight" />
                        or
                        <button special="cancel" string="Cancel" class="oe_link" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
