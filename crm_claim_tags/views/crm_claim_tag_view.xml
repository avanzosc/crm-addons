<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="crm_claim_tag_tree_view">
            <field name="name">crm.claim.tag.tree.view</field>
            <field name="model">crm.claim.tag</field>
            <field name="arch" type="xml">
                <tree string="Tags for claims" editable="top">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="crm_claim_tag_search_view" model="ir.ui.view">
            <field name="name">crm.claim.tag.search.view</field>
            <field name="model">crm.claim.tag</field>
            <field name="arch" type="xml">
                <search string="Search tag for claims">
                    <field name="name" />
                </search>
            </field>
        </record>

        <record id="action_crm_claim_tag_view" model="ir.actions.act_window">
            <field name="name">Tags for claims</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.claim.tag</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="crm_claim_tag_option_view" name="Tags for claims"
                  action="action_crm_claim_tag_view" 
                  parent="crm_claim.menu_config_claim" sequence="1"
                  groups="base.group_no_one" />
    </data>
</odoo>
