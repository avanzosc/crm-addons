<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <menuitem id="school_support_menu" name="Support"
            groups="sales_team.group_sale_salesman"/>
        <record id="crm_claim_category_tree_view_inh_school" model="ir.ui.view">
            <field name="inherit_id" ref="crm_claim.crm_claim_category_tree" />
            <field name="model">crm.claim.category</field>
            <field name="arch" type="xml">
                <field name="team_id" position="after">
                    <field name="mail_server_id" />
                </field>
            </field>
        </record>
        <record id="crm_claim_category_search_view" model="ir.ui.view">
            <field name="name">crm.claim.category.search.view</field>
            <field name="model">crm.claim.category</field>
            <field name="arch" type="xml">
                <search string="Search claim category">
                    <field name="name" />
                    <field name="team_id"/>
                    <field name="mail_server_id" />
                    <group expand="1" string="Group By">
                        <filter string="Team" name="team_group"
                                domain="[]" context="{'group_by':'team_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="crm_claim_category_form_view_inh_school" model="ir.ui.view">
            <field name="inherit_id" ref="crm_claim.crm_claim_category_form" />
            <field name="model">crm.claim.category</field>
            <field name="arch" type="xml">
                <field name="team_id" position="after">
                    <field name="mail_server_id" />
                </field>
            </field>
        </record>
        <record id="action_crm_claim_category" model="ir.actions.act_window">
            <field name="name">Claims categories</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.claim.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="crm_claim_category_tree_view_inh_school" />
        </record>
        <menuitem id="school_support_group_view" name="Support"
                parent="school_support_menu"/>
        <menuitem id="crm_claim_category_option_view" name="Claims categories"
                action="action_crm_claim_category"
                parent="school_support_group_view"
                groups="sales_team.group_sale_salesman"/>
</odoo>
